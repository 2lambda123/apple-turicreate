{
  "$schema": "https://vega.github.io/schema/vega/v4.json",
  "autosize": {"type": "fit", "resize": true, "contains": "padding"},
  "padding": 5,
  "width": 720,
  "height": 550,
  "title": {
    "text": "{{title}}"
  },
  "data": [
    {
      "name": "source_2"
    }
  ],
  "marks": [
    {
      "name": "marks",
      "type": "rect",
      "style": [
        "cell"
      ],
      "from": {
        "data": "source_2"
      },
      "encode": {
        "update": {
          "x2": {
            "scale": "x",
            "field": "x_left"
          },
          "x": {
            "scale": "x",
            "field": "x_right"
          },
          "y2": {
            "scale": "y",
            "field": "y_left"
          },
          "y": {
            "scale": "y",
            "field": "y_right"
          },
          "fill": {
            "scale": "color",
            "field": "count"
          }
        }
      }
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "domain": {
        "data": "source_2",
        "fields": [
          "x_left",
          "x_right"
        ],
        "sort": true
      },
      "range": [
        0,
        {
          "signal": "width"
        }
      ],
      "zero": false
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source_2",
        "fields": [
          "y_left",
          "y_right"
        ],
        "sort": true
      },
      "range": [
        {
          "signal": "height"
        },
        0
      ],
      "zero": false
    },
    {
      "name": "color",
      "type": "sequential",
      "domain": {
        "data": "source_2",
        "field": "count"
      },
      "range": "heatmap",
      "nice": false,
      "zero": false
    }
  ],
  "axes": [
    {
      "scale": "x",
      "labelOverlap": true,
      "orient": "bottom",
      "tickCount": {
        "signal": "min(ceil(width/40), 60)"
      },
      "title": "{{xlabel}}",
      "zindex": 1,
      "encode": {
        "labels": {
          "update": {
            "angle": {
              "value": 270
            },
            "align": {
              "value": "right"
            },
            "baseline": {
              "value": "middle"
            }
          }
        }
      }
    },
    {
      "scale": "y",
      "labelOverlap": true,
      "orient": "left",
      "tickCount": {
        "signal": "min(ceil(height/40), 40)"
      },
      "title": "{{ylabel}}",
      "zindex": 1
    }
  ],
  "legends": [
    {
      "orient": "top",
      "direction": "horizontal",
      "fill": "color",
      "title": "Number of Records",
      "type": "gradient"
    }
  ],
  {{config}}
}