{
  "$schema": "https://vega.github.io/schema/vega/v4.json",
  "width": 88,
  "height": 88,
  "autosize": "none",

  "data": [
    {
      "name": "table",
      "values": [
        {"id": 1, "field": 4, "color": "#D0021B"},
        {"id": 2, "field": 60, "color": "#7ED321"}
      ],
      "transform": [
        {
          "type": "pie",
          "field": "field",
          "startAngle": 0,
          "endAngle": 6.29,
          "sort": false
        }
      ]
    }
  ],

  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {"data": "table", "field": "id"},
      "range": {"scheme": "category20"}
    }
  ],

  "marks": [
    {
      "type": "arc",
      "from": {"data": "table"},
      "encode": {
        "enter": {
          "fill": {"data": "table", "field": "color"},
          "x": {"signal": "width / 2"},
          "y": {"signal": "height / 2"}
        },
        "update": {
          "startAngle": {"field": "startAngle"},
          "endAngle": {"field": "endAngle"},
          "padAngle": 0,
          "innerRadius": 0,
          "outerRadius": {"signal": "width / 2"},
          "cornerRadius": 0
        }
      }
    }
  ]
}